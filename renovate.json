{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Ensure @types packages don't exceed major version of dependencies",
      "enabled": true,
      "packagePatterns": ["^@types/"],
      "rangeStrategy": "widen",
      "allowedVersions": "<={{depName}}"
    }
  ]
}
